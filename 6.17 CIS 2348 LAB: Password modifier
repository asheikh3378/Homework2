psw = input("Enter the password:")
for i in psw:
    if i == "i":
        psw = psw.replace("i", "1")
    elif i == "a":
        psw = psw.replace("a", "@")
    elif i == "m":
        psw = psw.replace('m', 'M')
    elif i == "B":
        psw = psw.replace("B", "8")
    elif i == "s":
        psw = psw.replace("s", "$")
psw = psw + "!"
print(psw)
